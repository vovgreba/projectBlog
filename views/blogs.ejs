<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Blog</title>
  <link rel="stylesheet" href="./styles/normalize.css">
  <link rel="stylesheet" href="./styles/style.css">
</head>
<body>
  <main class="main">
    <div class="main-container">
      <%- include('./header') %> 
      <div class="blog">
        <% for(let i = 0; i < docs.length; i++) { %> 
          <% if(i === numbers) break; %> 
          <% const { name, createBlogAuthor, title, descriptionBlog } = docs[i]; %> 
          <div class="wrapper">
            <div class="content-blog content-blog--travel">
              <button class="blog_name">travel</button>
              <div class="author">
                <img src="./img/Luka.png" alt="luka">
                <div class="author_name">
                  <p class="full-name"> <%= name %> </p>
                  <p> <%= createBlogAuthor %> </p>
                </div>
              </div>
              <h1 class="blog-title"><%= title %></h1>
            </div>
            <div class="blog-desc">
              <p> <%= descriptionBlog %> </p>
              <a class="blog_links" href="/link-blog">Continue Reading</a>
            </div>
          </div>
        <% } %> 

        <div class="wrapper-blog">
          <h2>Want to read more or create new blog ?</h2>
          <div class="create-blog_box-btn">
            <button class="show-blog">Show more</button>
            <button class="create-blog">Create new blog</button>
          </div>
        </div>
      </div>
    </div>
  </main>

  <%- include('./footer') %> 

  <%- include('./popup-modules') %> 

  <script src="https://cdnjs.cloudflare.com/ajax/libs/axios/1.1.3/axios.min.js"></script>
  <script src="./scripts/index.js"></script>
  <script src="./scripts/show-blog.js"></script>
</body>
</html>









